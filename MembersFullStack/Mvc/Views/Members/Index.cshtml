@using CBHS.Business.Interfaces;
@{
    ViewBag.Title = "Index";
}
<html>
<head>
</head>
<body>
    @using (Html.BeginForm("Add", "Members", FormMethod.Post))
    {
    <table>
        <tr>
            <td>First Name</td>
            <td>@Html.TextBox("FirstName")</td>
            <td>Email</td>
            <td>@Html.TextBox("Email")</td>
        </tr>
        <tr>
            <td>Last Name</td>
            <td>@Html.TextBox("LastName")</td>
            <td>Date of birth</td>
            <td>@Html.TextBox("DateOfBirth")</td>
        </tr>
        <tr>
            <td colspan="3"></td>
            <td align="right"><input type="submit" name="Add" id="Add" value="Add" /></td>
        </tr>
    </table>
    }


    <table>
    @{
        if (ViewBag.Members!=null)
        {
            foreach (var member in ViewBag.Members)
            {
        <tr>
            <td>@member.MemberId</td>
            <td>@member.FirstName</td>
            <td>@member.LastName</td>
            <td>@member.Email</td>
            <td>@member.DateOfBirth</td>
        </tr>
            }
        }

        if (ViewBag.oldestMember!= null)
        {
            var oldestMember = ViewBag.oldestMember;
            <tr>
                <td colspan="5"><br/></td>
            </tr>
            <tr>
                <td>@((DateTime.Today - Convert.ToDateTime(oldestMember.DateOfBirth)).Days/365)</td>
                <td colspan="2">@oldestMember.FirstName</td>
                <td colspan="2">@oldestMember.LastName</td>
            </tr>
        }
    }
    </table>
</body>
</html>